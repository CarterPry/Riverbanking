# Production Environment Variables
# Copy this file to .env and update with your production values

# Environment
NODE_ENV=production

# Database Configuration
PG_HOST=postgres
PG_PORT=5432
PG_USER=prod_user
PG_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
PG_DATABASE=soc2db_prod
PG_CONNECTION_STRING=postgres://prod_user:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/soc2db_prod

# Embedding Service Configuration
EMBEDDING_API_URL=https://api.openai.com/v1/embeddings
OPENAI_API_KEY=sk-prod-CHANGE_THIS_KEY
EMBEDDING_MODEL=text-embedding-ada-002

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SECURE_JWT_SECRET
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker Configuration
DOCKER_HOST=/var/run/docker.sock
DOCKER_TIMEOUT=300000

# Security
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# MCP Server Configuration
MCP_SERVER_PORT=3002
MCP_SERVER_HOST=0.0.0.0

# External Services
KALI_SERVICE_URL=http://kali-toolset:8080
EMBEDDINGS_SERVICE_URL=http://embeddings:11434

# Feature Flags
ENABLE_AI_AGENT=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_HITL_REVIEW=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Alert Configuration
ALERT_EMAIL=security@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL