{
  "name": "soc2-testing-platform",
  "version": "1.0.0",
  "description": "AI-enhanced monorepo for automating SOC 2 penetration testing",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start:all": "npm run start --workspaces",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces --if-present",
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "install:all": "npm install --workspaces",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "soc2",
    "security",
    "testing",
    "penetration-testing",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "jsonwebtoken": "^9.0.2"
  }
}
