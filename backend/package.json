{
  "name": "@soc2-testing/backend",
  "version": "1.0.0",
  "description": "Backend service for SOC2 testing platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "./tests/performance/run-load-test.sh",
    "test:perf": "artillery run tests/performance/load.yml",
    "test:all": "npm run test && npm run test:load",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.5",
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "p-limit": "^5.0.0",
    "pdfkit": "^0.14.0",
    "pg": "^8.16.3",
    "pgvector": "^0.1.8",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.23",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/pdfkit": "^0.13.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "artillery": "^2.0.23",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
